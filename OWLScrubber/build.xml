<project name="OWLScrubber" basedir=".">
    <!-- *********************************************************-->
    <!--    Properties                                            -->
    <!-- *********************************************************-->

    <property name="lib.dir" value="./lib"/>
    <property name="build.dir" value="./build" />
    <property name="classes.dir" value="./classes" />
    <property name="src.dir" value="./src" />
    <property name="output.dir" value="./output"/>
    <property name="owlscrubber.properties" value = "./config/owlscrubber.properties" />
    
    
    <path id="libs">
        <pathelement location="${classes.dir}"/>
        <fileset dir="${lib.dir}">
            <include name="**/owlapi-bin.jar"/>
        </fileset>
    </path>
    
    
    <!-- ********************************************************-->
    <!--    Targets for building                                 -->
    <!-- ********************************************************-->
    
    <target name="clean"
        description="Removes generated artifacts">
        <delete dir="${build.dir}" quiet="true"/>
        <delete file="${outputFile}" quiet="true"/>
    </target>
    
    <target name="init" depends="clean" 
            description="Creates necessary directories">
           <mkdir dir="${classes.dir}"/>
            <mkdir dir="${build.dir}"/>
     </target>
    
    <target name="compile" depends="init" description="Compiles">
        <javac srcdir="${src.dir}" destdir="${classes.dir}" 
            encoding="cp1252" debug="true" debuglevel="lines,source">
            <classpath refid="libs"/>
        </javac>        
    </target>
    
    <!-- ********************************************************-->
    <!--    Targets for packaging                                 -->
    <!-- ********************************************************-->
    <target name="jar" depends="compile" description="Package code into a jar file">
         <jar destfile= "${build.dir}/owlscrubber.jar"
                basedir="${classes.dir}">
      	  <zipgroupfileset includes="*.jar" dir="${lib.dir}"/>
      	     			
      	     	<manifest>
          	<attribute name="Main-Class"
          		value="gov.nih.nci.owl.OWLScrubber"/>
          		</manifest>
         </jar>
    </target>
    
    <!-- *****************************************************-->
    <!--    Targets for running                               -->
    <!-- *****************************************************-->

    <target name="run" depends="jar" description="Runs default">
        <echo message="Command line args: ${arguments}" />
        <java classname="gov.nih.nci.owl.OWLScrubber" fork="true">
            <jvmarg value="-Xmx5000m" />
            <arg line="${arguments}"/>
            <classpath refid="libs"/>
            <sysproperty key="owlscrubber.properties" value="${owlscrubber.properties}" />
        </java>
    </target>
</project>
